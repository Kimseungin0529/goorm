<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.doong.exp.program0911.mybatis.mapper.BookMapper">

    <!-- 도서 등록 -->
    <insert id="insertBook" parameterType="com.doong.exp.program0906.Book">
        INSERT INTO BOOK (title, author, publisher, published_date)
        VALUES (#{title}, #{author}, #{publisher}, #{publishedDate})
    </insert>

    <!-- 도서 조회 by ID -->
    <select id="findById" parameterType="long" resultType="com.doong.exp.program0906.Book">
        SELECT * FROM BOOK WHERE id = #{id}
    </select>

    <!-- 도서 수정 -->
    <update id="updateBook" parameterType="com.doong.exp.program0906.Book">
        UPDATE BOOK
        SET title = #{title}, author = #{author}, publisher = #{publisher}, published_date = #{publishedDate}
        WHERE id = #{id}
    </update>

    <!-- 도서 삭제 -->
    <delete id="deleteBookById" parameterType="long">
        DELETE FROM BOOK WHERE id = #{id}
    </delete>

    <!-- 전체 도서 조회 -->
    <select id="findAllBooks" resultType="com.doong.exp.program0906.Book">
        SELECT * FROM BOOK
    </select>

</mapper>
